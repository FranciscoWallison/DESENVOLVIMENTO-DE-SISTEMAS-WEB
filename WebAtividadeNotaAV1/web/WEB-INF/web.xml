<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletAcesso</servlet-name>
        <servlet-class>br.estacio.controller.ServletAcesso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMatricula</servlet-name>
        <servlet-class>br.estacio.controller.ServletMatricula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLista</servlet-name>
        <servlet-class>br.estacio.controller.ServletLista</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletNome</servlet-name>
        <servlet-class>br.estacio.controller.ServletNome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControlador</servlet-name>
        <servlet-class>br.estacio.controller.ServletControlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAcesso</servlet-name>
        <url-pattern>/acesso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMatricula</servlet-name>
        <url-pattern>/matricula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLista</servlet-name>
        <url-pattern>/lista</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletNome</servlet-name>
        <url-pattern>/nome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletControlador</servlet-name>
        <url-pattern>*.fic</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>atividade.html</welcome-file>
    </welcome-file-list>
</web-app>
